@model IEnumerable<RestaurantManagementSystem.Models.FoodItem>

@{
    ViewData["Title"] = "Index";
}

<h1>Food Item</h1>

<p>
    <a class ="btn btn-sm btn-success" asp-action="Create">Create New</a>
</p>

<div class="card-columns">
    @foreach (var fooditem in Model) {
        <div class="card border border-danger" >
            <div class="card-header font-weight-bold">
                @fooditem.FoodItemName
            </div>
            <div class="card-body ">
                @Html.DisplayNameFor(modelItem => fooditem.FoodItemPrice) : @fooditem.FoodItemPrice
                <br />
                @Html.DisplayNameFor(modelItem => fooditem.FoodCategory) : @fooditem.FoodCategory.FoodCategoryName
            </div>
            <div class="card-footer">
                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@fooditem.FoodItemId">Edit</a>
                <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@fooditem.FoodItemId">Details</a>
                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@fooditem.FoodItemId">Delete</a>
            </div>
        </div>
    }
</div>